{
  "manifest_version": 2,
  "name": "URL Blocker",
  "version": "1.0",
  "description": "Blocks access to specific URLs.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "options_page": "options.html",
  "browser_action": {
    "default_popup": "options.html",
    "default_title": "URL Blocker"
  }
}
