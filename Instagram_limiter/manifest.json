// manifest.json
{
  "manifest_version": 2,
  "name": "Instagram Time Limiter",
  "version": "1.0",
  "description": "Limits Instagram usage to 20 minutes per day",
  "permissions": [
    "storage",
    "tabs",
    "*://*.instagram.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["*://*.instagram.com/*"],
    "js": ["content.js"]
  }]
}
